generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model pouzivatel {
  id               Int                @id @default(autoincrement())
  meno             String
  priezvisko       String
  email            String             @unique
  hash_heslo       String
  je_admin         Boolean
  kniha_pouzivatel kniha_pouzivatel[]
}

model kniha {
  id               Int                @id @default(autoincrement())
  nazov            String             @unique
  rok_vydania      Int
  pocet_stran      Int
  autor_id         Int
  zaner_id         Int
  autor            autor              @relation(fields: [autor_id], references: [id], onDelete: Cascade)
  zaner            zaner              @relation(fields: [zaner_id], references: [id])
  kniha_pouzivatel kniha_pouzivatel[]
}

model autor {
  id         Int     @id @default(autoincrement())
  meno       String
  priezvisko String
  datum_nar  String
  info       String  @default("")
  kniha      kniha[]

  @@unique([meno, priezvisko])
}

model zaner {
  id    Int     @id @default(autoincrement())
  nazov String  @unique
  popis String
  kniha kniha[]
}

model kniha_pouzivatel {
  id            Int        @id @default(autoincrement())
  kniha_id      Int
  pouzivatel_id Int
  stav          stav
  vytvorene     DateTime   @default(now())
  poznamka      String?
  kniha         kniha      @relation(fields: [kniha_id], references: [id])
  pouzivatel    pouzivatel @relation(fields: [pouzivatel_id], references: [id])
}

enum stav {
  chcemPrecitat
  precitane
}