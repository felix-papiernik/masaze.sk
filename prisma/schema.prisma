generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  String
  phone     String // if there'd be user with same number, new user couldn't write his number
  firstName String
  lastName  String
  role      Role   @default(CLIENT)
}

enum Role {
  SUPERADMIN
  OWNER
  MASSEUR
  CLIENT
}


